# Environment Configuration for Nehemia Ministry Kenya
# Copy this file to .env and update with your actual values

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/nehemia-ministry

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-very-long-and-random
JWT_REFRESH_SECRET=your-refresh-token-secret-here-also-very-long-and-random
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Email Configuration (for contact forms and notifications)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@nehemiaministry.org

# Cloudinary Configuration (for image uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# PayPal Configuration (for donations)
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Application URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3000/admin
DASHBOARD_URL=http://localhost:3000/dashboard

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_SALT_ROUNDS=12

# Session Configuration
SESSION_SECRET=your-session-secret-here-very-long-and-random
COOKIE_MAX_AGE=86400000

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx

# API Keys for external services
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
FACEBOOK_APP_ID=your-facebook-app-id
TWITTER_API_KEY=your-twitter-api-key

# Admin Configuration
DEFAULT_ADMIN_EMAIL=admin@nehemiaministry.org
DEFAULT_ADMIN_PASSWORD=ChangeThisPassword123!

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Development Configuration
DEBUG_MODE=true
MOCK_PAYMENTS=true
